# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/uninoteshub

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TTL=900  # 15 minutes in seconds
JWT_REFRESH_TTL=604800  # 7 days in seconds

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# S3 Storage Settings
S3_ENDPOINT=http://localhost:9000  # MinIO for local dev
S3_BUCKET=uninoteshub-files
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_REGION=us-east-1

# Email Configuration (supports both SMTP and AWS SES)
EMAIL_PROVIDER=smtp  # "smtp" or "ses"

# SMTP Settings (when using smtp provider)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@uninoteshub.com
EMAIL_USE_TLS=true

# AWS SES Settings (when using ses provider)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_REGION=us-east-1  # Optional: if different from AWS_REGION
SES_FROM_EMAIL=noreply@yourdomain.com  # Must be verified in SES

# Redis (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# File Upload Limits
MAX_FILE_SIZE=20971520  # 20MB in bytes
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900  # 15 minutes
RATE_LIMIT_UPLOAD_PER_HOUR=10
RATE_LIMIT_DOWNLOAD_PER_HOUR=100

# Admin Settings
ADMIN_EMAIL=admin@uninoteshub.com
